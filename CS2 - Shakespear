try:
    with open("King_Lear.txt, r") as file:
        counts = dict()
        for line in file:
            print(line)
            words = line.split("")
            for word in words:
                if word not in counts:
                    counts[word] = 1
                else:
                    counts[word] = 1
        print(counts)

except FileNotFoundError:
    print("File Not Found")
