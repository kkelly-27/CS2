function dataFunction(length, width, height, zipcode1, zipcode2) {
    try {
        length = parseFloat(length);
        width = parseFloat(width);
        height = parseFloat(height);
        zipcode1 = parseInt(zipcode1);
        zipcode2 = parseInt(zipcode2);
        return [length, width, height, zipcode1, zipcode2];
    } catch (error){
        return [-1, -1, -1, -1, -1];
    }
}


function mailDimensions(l, w, h) {
    if (l >= 3.5 && l <= 4.25 && w >= .007 && w <= .016 && h >= 3.5 && h <= 6) {
        return 1;
    } else if (l >= 4.25 && l <= 6 && w >= .007 && w <= .015 && h >= 6 && h <= 11.5) {
        return 2;
    } else if (l >= 3.5 && l <= 6.125 && w >= .016 && w <= .25 && h >= 5 && h <= 11.5) {
        return 3;
    } else if (l >= 6.125 && l <= 24 && w >= .25 && w <= .5 && h >= 11 && h <= 18) {
        return 4;
    } else if ((l + w + w + h + h) <= 84) {
        return 5;
    } else if ((l + w + w + h + h) >= 84 && (l + w + w + h + h) <= 130) {
        return 6;
    } else {
        return -1;   
    }
}



function zipZone(zip) {
    let zone;
    if (zip >= 1 && zip <= 6999) { 
        zone = 1;
    } else if (zip >= 7000 && zip <= 19999) { 
        zone = 2;
    } else if (zip >= 20000 && zip <= 35999) { 
        zone = 3;
    } else if (zip >= 36000 && zip <= 62999) { 
        zone = 4;
    } else if (zip >= 63000 && zip <= 84999) { 
        zone = 5;
    } else if (zip >= 85000 && zip <= 99999) {
        zone = 6;
    } else {
        zone = -1;
    }
    return zone;
}



function moneyConvert(parcelType, zone1, zone2){
    let price = 0
    const zoneTravel = Math.abs(zone1 - zone2)
    if (parcelType === 1) {
        price = .2 + zoneTravel * .03;
    } else if (parcelType === 2) {
        price = .37 + zoneTravel * .03;
    } else if (parcelType === 3) {
        price = .37 + zoneTravel * .04;
    } else if (parcelType === 40) {
        price = .6 + zoneTravel * .05;
    } else if (parcelType === 5) {
        price = 2.95 + zoneTravel * .25;
    }  else if (parcelType === 6) {
        price = 3.95 + zoneTravel * .35;
    }
    console.log(zoneTravel, price)
    return price;  
}



function main() {
    let length = parseFloat(document.getElementById("length").value);  
    let width = parseFloat(document.getElementById("width").value); 
    let height = parseFloat(document.getElementById("height").value);
    let zone1 = parseInt(document.getElementById("zone1").value);
    let zone2 = parseInt(document.getElementById("zone2").value);
    
    zone1 = zipZone(zone1);
    zone2 = zipZone(zone2);

    if ([length, width, height, zone1, zone2, mailDimensions(length, width, height)].includes(-1)) {
      // Display the result inside the <p> tag  ( Salvaged: <h2><u>ENTER PACKAGE INFORMTAION</u>:</h2><br>) 
      document.getElementById("result").innerText = "UNMAILABLE";

    } else {
        let martianMail = moneyConvert(mailDimensions(length, width, height), zone1, zone2);
       martianMail = martianMail.toFixed(2);
        martianMail = martianMail.replace(/^0/, '');
        martianMail = "$"+martianMail
        document.getElementById("result").innerText = (martianMail);
    }
}

