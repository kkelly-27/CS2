import random

#Reverse and Display
def reverse(name):
    empty_string = ""
    name_list = list(name)
    while True:
        empty_string = empty_string + name_list[-1]
        name_list.pop()
        if name_list == []:
            break
    print(f'Reversed Name: {empty_string}')

#Make Initials
def initials(name):
    list_var = list(name)
    init = list_var[0]

    for i in range(len(list_var)):
        if list_var[i] == " " and i + 1 < len(list_var):
            init += list_var[i+1]

    print(f"Initials: {init}")
            

    
#Vowel Counting
def vowel_count(name):
    vowels = ["a", "e", "i", "o", "u", "A", "E", "I", "O", "U"]
    vowel_tracker = 0
    name_list = list(name)
    for i in name_list:
        if i in vowels:
            vowel_tracker += 1
    print(f"Vowel Count: {vowel_tracker}")


#Consonant Frequency
def consonant_freq(name):
    vowels = ["a", "e", "i", "o", "u", "A", "E", "I", "O", "U"]
    consonant_tracker = 0
    name_list = list(name)
    for i in name_list:
        if i not in vowels:
            consonant_tracker += 1
    print(f"Consonant Count: {consonant_tracker}")


#Random Name
def random_name(name):
    characters = list(name)
    random.shuffle(characters) 
    pass

#Palindrome
def palindrome_name(name):
    palindrome_list = list(name)
    palindrome_tester = ""
    while True:
        if palindrome_list == []:
            if palindrome_tester == name:
                return True
            else:
                return False
        palindrome_tester = palindrome_tester + palindrome_list[-1]

        palindrome_list.pop()
        
        if palindrome_tester == name:
            print("Palindrome: True")



        
        
#Name Split       

# Splits a full name string into its individual components (words) by spaces.

#This script iterates through each character in the input string `name`, building up words character by character.
#When a space character is encountered, the current word is added to the `parts` list and the word buffer is reset.
#After processing all characters, any remaining word is added to the list.
#Finally, the list of name parts is printed.

#Example:
    #Input:  "gordon andrew campbell"
    #Output: ['gordon', 'andrew', 'campbell'] 

def my_split(name):
    parts = []
    current = ""
    for char in name:
        if char == " ":
            if len(current) > 0:
                parts.append(current)
                current = ""
        else:
            current += char
    parts.append(current)
    return parts

#Middle Name
def middle_name(name):
    name_list = my_split(name)
    middle_name_list = name_list[1:-1]
    print(middle_name_list)

#Hyphen Code
def hyphen(name):
    name_list = list(name)
    for i in name_list: 
        if i == "-": 
            print(True)
            return
    print(False)

#Main
def main():
    while True:
        print("1. Run Functions Through")
        print("2. Initials")
        print("3. Split Name")
        print("4. Reverse Name")
        print("5. Vowel Count")
        print("6. Consonent Frequency")
        print("7. Middle Name")
        print("8. Hyphen")
        print("9. Palindrome Check")
        print("10. Quit")
       
        choice = input("Enter Choice: ")

        if choice == "1":
            name = input('What is your name?: ')
            initials(name)
            my_split(name)
            reverse(name)
            vowel_count(name)
            middle_name(name)
            hyphen(name)
            palindrome_name(name)
        
        elif choice == "2":
            name = input('What is your name?: ')
            initials(name)

        elif choice == "3":
            name = input('What is your name?: ')
            my_split(name)

        elif choice == "4":
            name = input('What is your name?: ')
            reverse(name)

        elif choice == "5":
            name = input('What is your name?: ')
            vowel_count(name)

        elif choice == "6":
            name = input('What is your name?: ')
            consonant_freq(name)   

        elif choice == "7":
            name = input('What is your name?: ')
            middle_name(name)

        elif choice == "8":
            name = input('What is your name?: ')
            hyphen(name)

        elif choice == "9":
            name = input('What is your name?: ')
            palindrome_name(name)

        elif choice == "10":
            name = input('What is your name?: ')
            print("Quitting...")
            break
        else:
            print("INVALID, TRY AGAIN.")

main()
